  <groupId>de.comlineag.sbm</groupId>
  <artifactId>SocialNetWorkConnector</artifactId>
  <version>0.1.4-SNAPSHOT</version>
	
  <build>
  	<!-- Explicitly declare source encoding to avoid Maven warning -->
  	<!-- 
  	 <properties>
  	    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  	 </properties>
  	  -->
  	 <!-- 
  	 	as per http://docs.codehaus.org/display/MAVENUSER/POM+Element+for+Source+File+Encoding
  	 	the following entries should help get rid of these yellow warnings regarding source file encoding:
  	 	"Using platform encoding (US-ASCII actually) to copy filtered resources, i.e. build is platform dependent!"
  	 	but apparently they don't work :-(
  	  -->
  	  <!-- <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>  -->
  	  <!-- <sourceEncoding>UTF-8</sourceEncoding>  -->
  	  <!-- 
  	  	This post http://dimitrisli.wordpress.com/2010/08/28/specifying-encoding-in-maven-pom/ says
  	  	to use this line
  	    but it doesn't work either
  	   <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  	   -->
	<plugins>
    	<plugin>
        	<groupId>org.apache.maven.plugins</groupId>
        	<artifactId>maven-compiler-plugin</artifactId>
        	<version>2.3.2</version>
        	<configuration>
        		<source>1.7</source>
				<target>1.7</target>
			</configuration>
		</plugin>

		<!-- THIS IS THE DEPENDENCY FOR THE JETTY APPLICATION SERVER -->
		<plugin>
			<groupId>org.mortbay.jetty</groupId>
			<artifactId>maven-jetty-plugin</artifactId>
			<version>6.1.7</version>
			<configuration>
				<connectors>
					<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
						<port>8888</port>
						<maxIdleTime>30000</maxIdleTime>
					</connector>
				</connectors>
          		<webAppSourceDirectory>${project.build.directory}/${pom.artifactId}-${pom.version}</webAppSourceDirectory>
          		<contextPath>/</contextPath>
			</configuration>
		</plugin>
      
		<!-- THIS IS DEPENDENCY FOR THE TOMCAT APPLICATION SERVER -->
		<!--  
		<plugin>
			<groupId>org.apache.tomcat.maven</groupId>
			<artifactId>tomcat7-maven-plugin</artifactId>
			<version>2.2</version>
			 
			<configuration>
				<connectors>
					<url>http://localhost:8080/socialnetworkconnector</url>
					<connector>
						<port>8080</port>
						<maxIdleTime>30000</maxIdleTime>
					</connector>
				</connectors>
          		<webAppSourceDirectory>${project.build.directory}/${pom.artifactId}-${pom.version}</webAppSourceDirectory>
          		<contextPath>/</contextPath>
          	</configuration>
          	
		</plugin>
		-->
	</plugins>
  </build>

